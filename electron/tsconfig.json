{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "../dist-electron",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@backend/*": ["../backend/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../src",
    "../dist"
  ]
}